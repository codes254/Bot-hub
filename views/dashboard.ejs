<%- include('partials/header', { title: title }) %>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@500;700&display=swap');

  body {
    margin: 0;
    background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)),
                url('https://i.imgur.com/FZypR60.jpeg') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Orbitron', sans-serif;
    color: #e0e0e0;
  }

  .container {
    max-width: 900px;
    margin: auto;
    padding: 2rem;
    background: rgba(18, 18, 18, 0.85);
    border-radius: 16px;
    box-shadow: 0 0 25px rgba(255, 0, 0, 0.2);
    min-height: 100vh;
  }

  h1 {
    text-align: center;
    font-size: 2rem;
    color: #ff1744;
    margin-bottom: 2rem;
  }

  .btn-upload, .btn-botlist {
    display: inline-block;
    background: #00e676;
    color: #000;
    font-weight: 700;
    padding: 0.6rem 1.4rem;
    border-radius: 10px;
    text-decoration: none;
    margin: 0 0.5rem 1.5rem 0;
    transition: all 0.3s ease;
  }

  .btn-upload:hover, .btn-botlist:hover {
    background: #00c853;
    transform: scale(1.05);
  }

  .bots-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .bot-card {
    background: #1a1a1a;
    border: 1px solid #333;
    padding: 1.2rem;
    border-radius: 12px;
    margin-bottom: 1.2rem;
    box-shadow: 0 0 12px rgba(255, 23, 68, 0.15);
    transition: transform 0.2s ease;
  }

  .bot-card:hover {
    transform: translateY(-5px);
  }

  .bot-title {
    font-size: 1.4rem;
    font-weight: 700;
    color: #00e676;
  }

  .bot-desc {
    margin: 0.4rem 0 0.6rem;
    font-size: 1rem;
    color: #ccc;
  }

  .bot-url {
    font-size: 0.9rem;
    color: #40c4ff;
    text-decoration: none;
  }

  .bot-url:hover {
    text-decoration: underline;
  }

  .bot-meta {
    font-size: 0.75rem;
    color: #888;
    margin-top: 0.5rem;
  }

  .footer {
    text-align: center;
    margin-top: 2rem;
    font-size: 0.9rem;
    color: #777;
    font-style: italic;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1rem;
    }

    h1 {
      font-size: 1.6rem;
    }

    .btn-upload, .btn-botlist {
      display: block;
      width: 100%;
      text-align: center;
      margin-bottom: 1rem;
    }
  }
</style>

<div class="container">
  <h1>Welcome, <%= user.username %> üï∏Ô∏è</h1>

  <a href="/upload-bot" class="btn-upload">‚ûï Upload a New Bot</a>
  <a href="/bots" class="btn-botlist">üìú View All Bots</a>

  <% if (bots.length === 0) { %>
    <p style="text-align:center; color:#999;">You haven't uploaded any bots yet.</p>
  <% } else { %>
    <ul class="bots-list">
      <% bots.forEach(bot => { %>
        <li class="bot-card">
          <div class="bot-title"><%= bot.title %></div>
          <p class="bot-desc"><%= bot.description %></p>
          <% if(bot.url) { %>
            <a href="<%= bot.url %>" target="_blank" rel="noopener" class="bot-url">üîó View Bot</a>
          <% } %>
          <div class="bot-meta">üìÖ Uploaded on: <%= new Date(bot.uploadedAt).toLocaleString() %></div>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <div class="footer">
    üõ°Ô∏è Made by <strong>FBI King</strong>
  </div>
</div>

<%- include('partials/footer') %>
